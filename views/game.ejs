        <!-- Ecran Ketchup -->
        <div class="row h-50 mt-2" id="team-ketchup">
            <div class="col">
                <div class="container d-flex h-100">
                    <div class="row h-100 row justify-content-center align-self-center">
                        <div class="col">
                            <div data-points="10" id="head-bread-k" class="empty-top-bread-img"></div>
                            <div data-points="9" id="head-tomato-k" class="empty-top-tomato-img"></div>
